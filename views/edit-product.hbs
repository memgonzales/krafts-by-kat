        <div class = "col-md-4 py-4 d-flex justify-content-center align-items-center flex-column bgc1 " id = "product-images">
            
            <div class = " bgc5 d-flex justify-content-center align-items-center mt-2 p-5" id = "focused-img">
                <i class = "far fa-images fa-7x fc3"></i>
            </div>

            <div class = "container d-flex mt-3 flex-row">

                <div class = "container mx-1 bgc5 other-img" id="img1">
                    <i class = "far fa-images fa-2x mx-1 fc3"></i>
                </div>
                <div class = "container mx-1 bgc5 other-img" id="img2">
