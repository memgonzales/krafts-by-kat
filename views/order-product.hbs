{{>navbar}}

<h1 class = "f1 text-start ms-5 mt-3">Make an Order</h1>

<div class = "container-fluid d-flex justify-content-center align-items-center flex-column mb-5">


    <div class = "container bgc5 p-5 " id = "order-form">


        <form class = "f1 d-flex p-5 justify-content-center cwhite flex-column m-5 bgc4" method = "POST" id = "order-header">
  
            <input class = "cblack" type = "text" id = "order-name" placeholder = "Order Name">
            <div id = "order-name-error" class = "form-text cblack fc3">Type why you're ordering, maybe an event perhaps.</div>

            
            <label class = "mt-4 cblack bold" for = "company-name">Company Name</label>
            <input class = "cblack" type = "text" id = "company-name">
            <div id = "company-name-error" class = "form text fc3"></div>

        </form>

        <form class = " f1 d-flex p-5 justify-content-center flex-column mt-5 mx-5 bgc4" id = "order-details">

            <div class = "container d-flex flex-row align-items-center justify-content-start p-1">

                <h2 class = "cblack bold">Order List</h2>

                <button type = "button" class = "btn bgc3 mx-4 d-flex justify-content-center align-items-center mb-2 py-2 pe-3 " id = "add-cart" data-bs-toggle="modal" data-bs-target="#pick-product">
                    <i class = "fas fa-cart-plus fa-lg my-2" data-bs-toggle = "tooltip" data-bs-placement = "right" title = "Add to Order List"></i>
                </button>
            
            </div>

            <div class = "dropdown-divider"></div>
            
            <div class = "accordion mt-2" id = "order-list">

                <div class = "accordion-item bgc3">    

                    <h2 class = "accordion-header " id = "productId_heading">
                        <button class = "accordion-button bold bgc3" type = "button" data-bs-toggle = "collapse" data-bs-target = "#productId_collapse" aria-expanded = "true" aria-controls = "productId_collapse">
                            Product Name Here
                        </button>
                    </h2>

                    <div id = "productId_collapse" class = "accordion-collapse collapse show" aria-labelledby = "productId_heading" data-bs-parent = "#order-list">
                        
                        <div class = "accordion-body bgc3">

                            
                        
                        </div>

                    </div>
                </div>

            </div>
         

        </form>

    </div>
    
</div>




{{>pick-product}}
