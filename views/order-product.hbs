{{>navbar}}

 <h1 class = "f1 text-start ms-5 mt-3">Make an Order</h1>

<div class = "container-fluid d-flex justify-content-center align-items-center flex-column">


    <div class = "container bgc5 p-5 " id = "order-form">


        <form class = "f1 d-flex p-5 justify-content-center cwhite flex-column m-5 bgc4" method = "POST" id = "order-header">
  
            <input class = "cblack" type = "text" id = "order-name" placeholder = "Order Name">
            <div id = "order-name-error" class = "form-text cblack fc3">Type why you're ordering, maybe an event perhaps.</div>

            
            <label class = "mt-4 cblack bold" for = "company-name">Company Name</label>
            <input class = "cblack" type = "text" id = "company-name">
            <div id = "company-name-error" class = "form text fc3"></div>

        </form>

        <form class = " f1 d-flex p-5 justify-content-center cwhite flex-column m-5 bgc4" id = "order-details">

            <div class = "container d-flex flex-row p-3 align-items-center justify-content-start">
                <h2 class = "cblack bold">Cart</h2>
                <button type = "button" class = "btn bgc3 mx-4" id = "add-cart-icon"><i class = "fas fa-cart-plus"></i></button>
            </div>
         

        </form>

    </div>
    
</div>