{{>navbar}}

<div class="container-fluid bgc5 ps-4 py-3 f1">
    
    <a href="/account/admin/orders">

        <div class="d-flex flex-row justify-content-start col-md-3">

            <i class="fas fa-arrow-circle-left fa-2x fc3"></i>
            <h5 class="cwhite ms-3 mt-1">Back to Order Collection</h5>
        </div>
    </a>
    
    
</div>
<div class="container bgc3 my-5 p-5 f1" id="order-focused">
    <h2>Order Name Here</h2>
    <h6><span class="bold">Order ID:</span> <span>AgG3tzP</span></h6>
    <h6><span class="bold">Placed by: </span> <span>Username Here</span></h6>
    <h6><span class="bold">Company:</span> <span>Company Name Here</span></h6>
    
    
    <h5 class="mt-4 bold">Order Details</h5>
    <div class="dropdown-divider"></div>

    <div class="accordion" id="products-accordion">
        
        {{>admin-orders-item-focused-details}}

    </div>

    <h5 class="mt-4 bold">Delivery Details</h5>
    <div class="dropdown-divider"></div>

    <h6 class="mt-3"><span class="bold">Delivery Address:</span> <span>Delivery Address Here</span></h6>
    <h6 class="mt-3"> <span class="bold">Preferred Delivery Date: </span> <span>1/22/2021</span></h6>

    <form class="mt-3" id="set-delivery-date-form">
        <div class="d-flex flex-row justify-content-start align-items-start">
            <h6 class="mt-1"><span class="bold">Set Delivery Date:</span> </h6>
            <input type="date" class="ms-2" id="set-delivery-date">
        </div>
    </form>
    

    <div class="d-flex justify-content-center">

        {{!-- Balik to Order Collection upon completion --}}
        {{!-- var for first #if is supposed to be orderPending --}}
        {{#if true}}<button type="button" class="btn bgc4" id="date-suggestion">Suggest Delivery Date to Client</button>{{/if}}
        {{#if orderAccepted}}<button type="button" class="btn bgc4" id="set-en-route">Set Order to En Route</button>{{/if}}
     

       
    </div>
    

</div>