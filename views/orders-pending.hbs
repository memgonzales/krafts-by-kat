{{>navbar userFlag = userFlag adminFlag = adminFlag username = username}}

<div class="container-fluid content d-flex flex-row f1" id="account-container" >
    {{>account-sidebar isAdmin = adminFlag ordersTab = true }}

    <div class="col-md-9">
        {{>orders-nav isAdmin = adminFlag pendingTab = true}}

        <div class="container" id="orders-collection">

            {{#each orderIds}}
                {{>orders-item isAdmin = ../adminFlag
                               orderId = this 
                               orderName = (lookup ../orderNames @index)
                               orderUsername = (lookup ../orderUsernames @index)
                               orderStatus = (lookup ../orderStatuses @index)
                               preferredDeliveryDate = (lookup ../preferredDeliveryDates @index)
                               orderPrice = (lookup ../orderPrices @index)
                               pendingOrder = (lookup ../pendingOrders @index)}}
            {{/each}}

        </div>

    </div>
</div>

<script src = "/js/order-item.js"></script>