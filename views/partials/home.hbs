<div class="container d-flex flex-row flex-wrap justify-content-center content">

    {{#each productNames}}
    <!-- Polaroid anchor -->

    <a href = "#" class = "m-4">
        <div class = "outer d-flex align-items-center pt-3 flex-column">

            <div class = "inner">
                <div id = "item-img-carousel" class = "carousel slide d-flex align-items-center overflow-hidden item-img-carousel-{{this}}" data-bs-ride="carousel">
                    
                    <div class = "carousel-inner">

                        {{#each (lookup ../productPictures @index)}}
                        <div class = "carousel-item">
                            <img src = "{{this}}" class = "d-block w-100  thumbnail" alt = "item 1">
                        </div>
                        {{/each}}

                    </div>

                    <button class = "carousel-control-prev" type = "button" data-bs-target = ".item-img-carousel-{{this}}" data-bs-slide = "prev">

                        <span class = "carousel-control-prev-icon" aria-hidden = "true"></span>

                        <span class = "visually-hidden">Previous</span>

                    </button>

                    <button class = "carousel-control-next" type = "button" data-bs-target = ".item-img-carousel-{{this}}" data-bs-slide = "next">

                        <span class = "carousel-control-next-icon" aria-hidden = "true"></span>

                        <span class = "visually-hidden">Next</span>
                        
                    </button>
                    
                </div>

            </div>
            
            <div class = "container-fluid f1 item overflow-hidden" id = "item-info">

                <span class = "d-inline-block text-truncate item mt-2" id = "item-name" style = "max-width: 290px;">
                    {{lookup ../productNames @index}}
                </span>

                <div class = "container d-flex flex-row justify-content-center mt-2">

                    <span class = "addl" id = "item-price">â‚±<span class = "price">{{lookup ../productPrices @index}}</span></span>

                    <span class = "addl" id = "item-rating">{{lookup ../productRatings @index}}<i class = "fas fa-star ms-1"></i></span>

                    <span class = "addl" id = "item-sale-count">{{lookup ../productNumberSold @index}} sold</span>

                </div>
                
            </div>
        </div>
    </a>

    {{/each}}
</div>

<script src = "/js/landing-polaroid.js"></script>