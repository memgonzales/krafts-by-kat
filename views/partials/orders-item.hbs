                    {{/if}}

                    {{#if acceptedOrder}}
                        <li><a class="dropdown-item" href="/viewSubmittedOrder/{{orderId}}">View Order</a></li>
                    {{/if}}

                    {{#if enRouteOrder}}
                        <li><a class="dropdown-item" href="/viewSubmittedOrder/{{orderId}}">View Order</a></li>
                        <li><a class="dropdown-item" href="/setOrderDelivered/{{orderId}}">Set Delivered</a></li>
                    {{/if}}

