<div class="container-fluid bgc5 p-3 f1 d-flex flex-row">
    
    <div class="col-md-6 p-2">
        {{#if isAdmin}}
            <a href="/account/admin/orders">

                <div class="d-flex flex-row justify-content-start col-md-3">

                    <i class="fas fa-arrow-circle-left fa-2x fc3"></i>
                    <h5 class="cwhite ms-3 mt-1">Back to Messages</h5>
                </div>
            </a>
            {{else}}
                <span class="cwhite mt-1">Contact Merchant</span>
        {{/if}}
    </div>
    <div class="col-md-6 d-flex justify-content-end">
        <a class="btn bgc1 p-auto mx-2" data-bs-toggle="modal" data-bs-target="#write-message"><i class="far fa-edit fc5"></i> </a>
        <form class="d-flex ms-2">
            <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
            <button class="btn bgc2" type="submit"><i class="fas fa-search"></i></button>
        </form> 
        

    </div>
    
</div>
<div id="thread-display">
    {{>default-first-message}}
    {{>default-first-message}}
    {{>default-first-message}}
    {{>default-first-message}}
    {{>default-first-message}}
    {{>default-first-message}}
    {{>default-first-message}}
</div>



<!-- Modal -->
<div class="modal fade " id="write-message" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog d-flex justify-content-center" id="write-message-dialog">
    <div class="modal-content bgc4 " id="write-message-content">
      <div class="modal-header">
        <h5 class="modal-title">Write a message</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <form id="write-message-form" >
            <textarea id="write-message-text-area" rows="4"></textarea>

            <div class="container p-2 d-flex justify-content-start flex-row hidden" id="file-upload-row">
                <div class="debug1 hidden" id="message-uploaded-file">
                    content
                </div>
            </div>
        
      </div>
      <div class="modal-footer d-flex justify-content-between">

        <button type="button" class="btn bgc3" id="write-message-upload-file"><i class="fas fa-paperclip"></i></button>

        <div>
            <button type="button" class="btn bgc3 cblack mx-1" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn bgc5 cwhite mx-1" id="send-message">Send Message</button>
        </div>

        </form>
      </div>
    </div>
  </div>
</div>

