<div class = "bgc1 m-5 p-3 f1" id = "review-card">

    <i class = "fas fa-quote-left"></i>

    <div class = "container" id = "review-text">
         {{comment}}
    </div>

    <hr>

    <div class = "container d-flex flex-row" id="review-user-info">

        <div class = "col-md-3 d-flex justify-content-center">

            <div id="user-dp">
                <img src="{{profilePicture}}" alt="dp">
            </div>
            
        </div>

        <div class = "col-md-9 ps-2 d-flex flex-column">

            <div>
               <span class="d-inline-block text-truncate fw-bold" style="max-width: 130px;">{{username}}</span> 
            </div>

            <div class="d-flex align-items-center">
                <i class = "fas fa-star fa-xs"></i>
                <span class="ms-1" id = "review-user-rating" >{{rating}}</span>
            </div>
        </div>
    </div>
</div>