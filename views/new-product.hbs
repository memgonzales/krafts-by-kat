<div class="container d-flex justify-content-center p-5 flex-column">

    <h1 class="f1">Add a new Product</h1>

    <form method = "POST" class = "bgc5 p-5 d-flex flex-column justify-content-center align-self-center " id = "new-product-form">
        <h3 class="f1 cwhite">Product Information</h3>
        <input type="text" id="product-name" name="product-name" placeholder="Product Name">

        <textarea id="product-desc" name="product-desc" rows="7" placeholder="Product Description..."></textarea>

        <div class="container d-flex flex-row justify-content-center">

            <input class = "me-5" type = "number" step=".01" min="0" id = "product-price" placeholder = "Price per unit">
            <input class = "ms-5" type = "number" min="0"id = "product-quantity" placeholder = "Quantity Available">

        </div>

    </form>

    <form method = "POST" class = "bgc5 p-5 mt-4 d-flex flex-column justify-content-center align-self-center " id = "new-product-form">
        
        <h3 class="f1 cwhite">Product Images</h3>

        <div class="mt-3 d-flex flex-row justify-content-center">
              <i class="far fa-images fa-7x mx-3 fc3"></i>
              <i class="far fa-images fa-7x mx-3 fc3"></i>
              <i class="far fa-images fa-7x mx-3 fc3"></i>
              <i class="far fa-images fa-7x mx-3 fc3"></i>
              <i class="far fa-images fa-7x mx-3 fc3"></i> 
        </div>

        <button class="btn bgc1 align-self-center mt-5" type="button"> Click to preview</button>
      

    </form>

    <div class="d-flex flex-row align-self-center m-5">
        <button type = "submit" class = "btn bgc4 align-self-center me-3" id = "new-product-submit" disabled>Add</button>
        <button type = "submit" class = "btn bgc4 align-self-center ms-3">Cancel</button>

    </div>
    
</div>
