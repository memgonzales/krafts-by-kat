{{>navbar userFlag = userFlag adminFlag = adminFlag}}

<div class="container d-flex justify-content-center p-5 flex-column">

    <h1 class="f1">Add a new Product</h1>

    <form method = "POST" class = "bgc5 p-5 d-flex flex-column justify-content-center align-self-center " id = "new-product-form">
        <h3 class="f1 cwhite">Product Information</h3>
        <input type="text" id="product-name" name="product-name" placeholder="Product Name">

        <textarea id="product-desc" name="product-desc" rows="7" placeholder="Product Description..."></textarea>

        <div class="container d-flex flex-row justify-content-center">

            <input class = "me-5" type = "number" step=".01" min="0" id = "product-price" placeholder = "Price per unit">
            <input class = "ms-5" type = "number" min="0"id = "product-quantity" placeholder = "Quantity Available">

        </div>

    </form>

    <form method = "POST" class = "bgc5 p-5 mt-4 d-flex flex-column justify-content-center align-self-center " id = "upload-new-product-form">
        
        <h3 class="f1 cwhite">Product Images</h3>

        <div class="mt-3 d-flex flex-row justify-content-center">
			<i class="far fa-images fa-7x mx-3 fc3" id = "img-1"></i>
			<img id = "pic-1">
			<input type = "file" id = "product-img-1" class = "hidden" onchange = "readURL(this, 1)">
			
			<i class="far fa-images fa-7x mx-3 fc3" id = "img-2"></i>
			<img id = "pic-2">
			<input type = "file" id = "product-img-2" class = "hidden" onchange = "readURL(this, 2)">

			<i class="far fa-images fa-7x mx-3 fc3" id = "img-3"></i>
			<img id = "pic-3">
			<input type = "file" id = "product-img-3" class = "hidden" onchange = "readURL(this, 3)">
			
			<i class="far fa-images fa-7x mx-3 fc3" id = "img-4"></i>
			<img id = "pic-4">
			<input type = "file" id = "product-img-4" class = "hidden" onchange = "readURL(this, 4)">
			
			<i class="far fa-images fa-7x mx-3 fc3" id = "img-5"></i> 
			<img id = "pic-5">
			<input type = "file" id = "product-img-5" class = "hidden" onchange = "readURL(this, 5)">
        </div>

        <button class="btn bgc1 align-self-center mt-5" type="button"> Click to preview</button>

		<div class="container d-flex flex-row flex-wrap justify-content-center">
			<a href = "#" class = "m-4">
				<div class = "outer d-flex align-items-center pt-3 flex-column">

					<div class = "inner">


						<div id = "item-img-carousel" class = "carousel slide d-flex align-items-center overflow-hidden" data-bs-ride="carousel">
							
							<div class = "carousel-inner">

								{{!-- Sample Carousel Item... Will be replaced by hbs when necessary --}}
								<div class = "carousel-item active">
									<img src = "/img/sample/img1.HEIC" class = "d-block w-100  thumbnail" alt = "item 1">
								</div>
								<div class = "carousel-item">
									<img src = "/img/sample/img2.jpeg" class = "d-block w-100  thumbnail" alt = "item 2">
								</div>
								]<div class = "carousel-item">
									<img src = "/img/sample/img3.HEIC" class = "d-block w-100  thumbnail" alt = "item 3">
								</div>
								<div class = "carousel-item">
									<img src = "/img/sample/img4.HEIC" class = "d-block w-100  thumbnail" alt = "item 4">
								</div>

							</div>

							<button class = "carousel-control-prev" type = "button" data-bs-target = "#item-img-carousel" data-bs-slide = "prev">

								<span class = "carousel-control-prev-icon" aria-hidden = "true"></span>

								<span class = "visually-hidden">Previous</span>

							</button>

							<button class = "carousel-control-next" type = "button" data-bs-target = "#item-img-carousel" data-bs-slide = "next">

								<span class = "carousel-control-next-icon" aria-hidden = "true"></span>

								<span class = "visually-hidden">Next</span>
								
							</button>
							
						</div>

					</div>
					
					<div class = "container-fluid f1 item overflow-hidden" id = "item-info">

						<span class = "d-inline-block text-truncate item mt-2" id = "item-name" style = "max-width: 290px;">
							An absurdly long amount of lines with the objective to see how much the text needs to be before it is needed to truncate
						</span>

						<div class = "container d-flex flex-row justify-content-center mt-2">

							<span class = "addl" id = "item-price">P 1304</span>

							<span class = "addl" id = "item-rating">4.5<i class = "fas fa-star ms-1"></i></span>

							<span class = "addl" id = "item-sale-count"> 299 sold</span>

						</div>
						
					</div>
				</div>

			</a>
		
		</div>
		
		<div class="d-flex flex-row align-self-center m-5">
			<button type = "submit" class = "btn bgc4 align-self-center me-3" id = "new-product-submit" disabled>Add</button>
			<button type = "reset" class = "btn bgc4 align-self-center ms-3">Cancel</button>

		</div>
		
		
	
	</form>
</div>

<script src = "/js/new-product.js"></script>
