{{>navbar userFlag = userFlag adminFlag = adminFlag}}

<div class="container-fluid content" >

	<div class="container pt-4">
		<h2 class="f1 ms-5 mt-3 form-header">Add a new Product</h2>
	</div>
	

<div class="container d-flex flex-row f1 mb-5 bgc5 " id="new-product-form">

	<div class="col-md-7">
		
		<form method = "POST" action = "/postNewProduct" enctype = "multipart/form-data" class = "p-5 d-flex flex-column justify-content-center align-self-center " id = "upload-new-product-form">
        
			<h3 class = "f1 cwhite bold mb-3">Product Images</h3>

			<div class="container d-flex flex-row">

				<div class="col-md-2 d-flex flex-column" id = "img-parent-div">

					<div class = "container img-frame d-flex justify-content-center align-items-center overflow-hidden my-2"> 

						<i class = "far fa-images fa-3x fc3" id = "img-1"></i>
						<img id = "pic-1">
						<input type = "file" accept = "image/*" id = "product-img-1" class = "hidden" name = "productImg1">
				
					</div>

					<div class = "container img-frame d-flex justify-content-center align-items-center overflow-hidden my-2"> 

						<i class = "far fa-images fa-3x mx-3 fc3" id = "img-2"></i>
						<img id = "pic-2">
						<input type = "file" accept = "image/*" id = "product-img-2" class = "hidden" name = "productImg2">
					
					</div>

					<div class = "container img-frame d-flex justify-content-center align-items-center overflow-hidden my-2"> 

						<i class = "far fa-images fa-3x mx-3 fc3" id = "img-3"></i>
						<img id = "pic-3">
						<input type = "file" accept = "image/*" id = "product-img-3" class = "hidden" name = "productImg3">
						
					</div>

					<div class = "container img-frame d-flex justify-content-center align-items-center overflow-hidden my-2"> 

						<i class = "far fa-images fa-3x mx-3 fc3" id = "img-4"></i>
						<img id = "pic-4">
						<input type = "file" accept = "image/*" id = "product-img-4" class = "hidden" name = "productImg4">
					
					</div>

					<div class = "container img-frame d-flex justify-content-center align-items-center overflow-hidden my-2"> 

						<i class = "far fa-images fa-3x mx-3 fc3" id = "img-5"></i> 
						<img id = "pic-5">
						<input type = "file" accept = "image/*" id = "product-img-5" class = "hidden" name = "productImg5">
						
					</div>

				</div>

				<div class="col-md-10 d-flex justify-content-center flex-column align-items-center bgc3">
					<div class = "outer d-flex align-items-center pt-3 flex-column">

						<div class = "inner">
							<div id = "item-img-carousel" class = "carousel slide d-flex align-items-center overflow-hidden" data-bs-ride="carousel">
								
								<div class = "carousel-inner" id = "polaroid-pic-carousel">

									<div class = "carousel-item active" id = "polaroid-div-1">
										<img src = "/img/placeholder/no-image.png" class = "d-block w-100  thumbnail" alt = "item 1"  id = "polaroid-pic-1">
									</div>

								</div>

								<button class = "carousel-control-prev" type = "button" data-bs-target = "#item-img-carousel" data-bs-slide = "prev">

									<span class = "carousel-control-prev-icon" aria-hidden = "true"></span>

									<span class = "visually-hidden">Previous</span>

								</button>

								<button class = "carousel-control-next" type = "button" data-bs-target = "#item-img-carousel" data-bs-slide = "next">

									<span class = "carousel-control-next-icon" aria-hidden = "true"></span>

									<span class = "visually-hidden">Next</span>
									
								</button>
								
							</div>

						</div>
						
						<div class = "container-fluid f1 item overflow-hidden" id = "item-info">

							<span class = "d-inline-block text-truncate item mt-2" id = "item-name" style = "max-width: 290px;">
								An absurdly long amount of lines with the objective to see how much the text needs to be before it is needed to truncate
							</span>

							<div class = "container d-flex flex-row justify-content-center mt-2">
								<span class = "addl" id = "item-price">â‚±1,304</span>

								<span class = "addl" id = "item-rating">4.5<i class = "fas fa-star ms-1"></i></span>

								<span class = "addl" id = "item-sale-count"> 299 sold</span>

							</div>
							
						</div>
					</div>

				</div>
			</div>

			<button class = "btn bgc1 align-self-center mt-4" type = "button" id = "preview-polaroid"> Click to preview</button>
		
		<!-- The form will be continued on the next div -->
	</div>

	<div class="col-md-5 d-flex  flex-column">
		<!-- This is part of the form -->
			<div class = " d-flex flex-column justify-content-center p-5">
				<h3 class="f1 cwhite mb-3 bold">Product Information</h3>

				<div  class = "form-text cwhite">Product Name</div>
				<input type = "text" id = "product-name" name = "productName" required>

				<div  class = "form-text cwhite">Product Description</div>
				<textarea id = "product-desc" name = "productDesc" rows = "7"></textarea>

				<div class = "d-flex justify-content-between"> 

					<input type = "number" step = ".01" min = "0" id = "product-price" placeholder = "Price per unit" name = "productPrice" required>

					<input type = "number" min = "0" id = "product-quantity" placeholder = "Quantity available" name = "productQuantity" required>
				</div>
			</div>

			<div class="d-flex flex-column align-self-center p-5 mb-5" id="confirm-add">

				<h3 class="cwhite">Add Product?</h3>

				<div class="d-flex justify-content-between mt-2">
					<button type = "submit" class = "btn bgc4 align-self-center me-3" id = "new-product-submit">Add</button>
					<button type = "reset" class = "btn bgc4 align-self-center ms-3" id = "cancel-product">Cancel</button>
				</div>
				
			</div>

		</form>
	</div>
	
</div>


</div>


<script src = "/js/new-product.js"></script>
